@if (Profile == null)
{
    <MudAlert Severity="Severity.Warning">No profile data available.</MudAlert>
}
else
{
    <div class="cv-container cover-letter">
        <div class="container">
            <div class="page">
                <!-- Header Section (Same as CV) -->
                <header class="header">

                    <div class="header-text">
                        <h1 class="name">@Profile.FullName</h1>
                        <h2 class="title">@Profile.Title</h2>
                        <div class="contact-info-wrapper">
                            Email: <a href="mailto:@Profile.Email">@Profile.Email</a> | Phone: @Profile.PhoneNumber
                            | Location: @Profile.Location<br>
                            LinkedIn: <a href="@Profile.LinkedInUrl" target="_blank">@Profile.LinkedInUrl</a>
                        </div>
                    </div>
                </header>

                <!-- Cover Letter Body -->
                <section class="section">
                    <div class="summary" style="white-space: pre-wrap; font-family: 'Segoe UI', sans-serif; font-size: 1em; line-height: 1.8;">
                        @((MarkupString)FormatLetter(LetterContent))
                    </div>
                </section>
                <!-- This footer could be a good point if in future the application is extended to include a subscription model -->
                <!-- Footer -->
                 <!-- <footer class="footer">
                    <p>Generated by WebCV</p>
                </footer> -->
            </div>
        </div>
    </div>
}
